<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">

    <changeSet id="2025-10-03-01-create-ai-chat-schema" author="junie">
        <createTable tableName="ai_dialogs">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <createTable tableName="user_async_tasks">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="error_message" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="completed_at" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
        <createIndex tableName="user_async_tasks" indexName="idx_user_async_tasks_status">
            <column name="status"/>
        </createIndex>

        <createTable tableName="chat_messages">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="dialog_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="task_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_chat_messages_dialog"
                                  baseTableName="chat_messages"
                                  baseColumnNames="dialog_id"
                                  referencedTableName="ai_dialogs"
                                  referencedColumnNames="id"
                                  onDelete="CASCADE"/>

        <addForeignKeyConstraint constraintName="fk_chat_messages_task"
                                  baseTableName="chat_messages"
                                  baseColumnNames="task_id"
                                  referencedTableName="user_async_tasks"
                                  referencedColumnNames="id"
                                  onDelete="CASCADE"/>

        <createIndex tableName="chat_messages" indexName="idx_chat_messages_dialog_id">
            <column name="dialog_id"/>
        </createIndex>
        <createIndex tableName="chat_messages" indexName="idx_chat_messages_task_id">
            <column name="task_id"/>
        </createIndex>
        <createIndex tableName="chat_messages" indexName="idx_chat_messages_created_at">
            <column name="created_at"/>
        </createIndex>

    </changeSet>
</databaseChangeLog>
